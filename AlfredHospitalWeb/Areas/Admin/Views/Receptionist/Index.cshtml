@model IEnumerable<Receptionist>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Receptionist List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Receptionist" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-clipboard-plus"></i> &nbsp; Create New Receptionist
            </a>
        </div>
    </div>
    <br /> 
    <br />


    <table class= "table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Receptionist ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Receptionist Counter
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                Gender
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Num
            </th>
             <th>
                Address
            </th>
            <th>
                State
            </th>
            <th>
                Zip
            </th>
            <th>
                Created Date Time
            </th>
                <th>
                   
                </th>
                       
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Id
                </td>
                <td>
                    @obj.FirstName
                </td>
                <td>
                    @obj.LastName
                </td>
                <td>
                    @obj.ReceptionistCounter
                </td>
                <td>
                    @obj.DateOfBirth
                </td>
                <td>
                    @obj.Gender
                </td>
                <td>
                    @obj.Email
                </td>
                <td>
                    @obj.PhoneNum
                </td>
                <td>
                    @obj.Address
                </td>
                <td>
                    @obj.State
                </td>
                <td>
                    @obj.Zip
                </td>
                <td>
                    @obj.CreatedDateTime 
                </td>
                    <td>
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Receptionist" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                        <td>
            <div class="w-50 btn-group" role="group">
                            <a asp-controller="Receptionist" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Delete</a>
                                </div>
                        </td>
                
            </tr>
        }
    </tbody>


</table>
</div>
