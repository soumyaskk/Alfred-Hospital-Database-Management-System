<div class="=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Room List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Room" asp-action="InsertUpdate" class="btn btn-primary">
                <i class="bi bi-clipboard-plus"></i> &nbsp; Create New Room
            </a>
        </div>
    </div>
    <br />
    <br />


    <table id="tblDataRoom" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
             
                <th>
                    Room Type
                </th>
                <th>
                    Capacity
                </th>
                <th>
                    Status
                </th>
                <th>
                    Nurse First Name
                </th>
