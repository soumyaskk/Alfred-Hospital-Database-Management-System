@model Physician

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Physician</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="FirstName"></label>
			<input asp-for="FirstName" class="form-control" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="LastName"></label>
			<input asp-for="LastName" class="form-control" />
			<span asp-validation-for="LastName" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="Department"></label>
			<input asp-for="Department" class="form-control" />
			<span asp-validation-for="Department" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="DateOfBirth"></label>
			<input asp-for="DateOfBirth" class="form-control" />
			<span asp-validation-for="DateOfBirth" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="Gender"></label>
			<input asp-for="Gender" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="PhoneNum"></label>
			<input asp-for="PhoneNum" class="form-control" />
			<span asp-validation-for="PhoneNum" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="Address"></label>
			<input asp-for="Address" class="form-control" />
			<span asp-validation-for="Address" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="State"></label>
			<input asp-for="State" class="form-control" />
			<span asp-validation-for="State" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="Zip"></label>
			<input asp-for="Zip" class="form-control" />
			<span asp-validation-for="Zip" class="text-danger"></span>

		</div>
		
		<button type="submit" class="btn btn-primary" style="width:200px">Update</button>
		<a asp-controller="Physician" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Physician List
		</a>
	</div>
</form>

@section Scripts
{
	@{

		<partial name="_ValidationScriptsPartial" />
}
}
