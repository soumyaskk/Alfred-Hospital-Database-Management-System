@model Physician

<form method="post" asp-action="DeletePOST">
	<input asp-for="Id" hidden />

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Patient</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="FirstName"></label>
			<input asp-for="FirstName" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="LastName"></label>
			<input asp-for="LastName" disabled class="form-control" />
			

		</div>
		<div class="mb-3">
			<label asp-for="Department"></label>
			<input asp-for="Department" disabled class="form-control" />


		</div>
		<div class="mb-3">
			<label asp-for="DateOfBirth"></label>
			<input asp-for="DateOfBirth" disabled class="form-control" />
			

		</div>
		<div class="mb-3">
			<label asp-for="Gender"></label>
			<input asp-for="Gender" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Email"></label>
			<input asp-for="Email" disabled class="form-control" />
			

		</div>
		<div class="mb-3">
			<label asp-for="PhoneNum"></label>
			<input asp-for="PhoneNum" disabled class="form-control" />
			

		</div>
		<div class="mb-3">
			<label asp-for="Address"></label>
			<input asp-for="Address" disabled class="form-control" />
			

		</div>
		<div class="mb-3">
			<label asp-for="State"></label>
			<input asp-for="State" disabled class="form-control" />
			

		</div>
		<div class="mb-3">
			<label asp-for="Zip"></label>
			<input asp-for="Zip" disabled class="form-control" />
			

		</div>
		
		<button type="submit" class="btn btn-danger" style="width:200px">Delete</button>
		<a asp-controller="Physician" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Physician List
		</a>
	</div>
</form>

@section Scripts
{
	@{

		<partial name="_ValidationScriptsPartial" />
}
}
