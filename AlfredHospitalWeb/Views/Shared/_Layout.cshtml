@using AlfredHospital.Utility;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlfredHospitalWeb</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlfredHospitalWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="HospitalPatient" asp-controller="Home" asp-action="Index">Home</a>

                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management System</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="" asp-action="Index">More Info</a>

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Make an Appointment</a>

                            </div>
                        </li>

                        @if (User.IsInRole(SD.Role_Admin))
                                    {

                        <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management System</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Patient" asp-action="Index">Patient</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Physician" asp-action="Index">Physician</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Appointment" asp-action="Index">Appointment</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Receptionist" asp-action="Index">Receptionist</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Nurse" asp-action="Index">Nurse</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Room" asp-action="Index">Room</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Billing" asp-action="Index">Billing</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="History" asp-action="Index">Patient History</a>

                               <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create User</a>
                                
                            </div>
                        </li>
                        }
                             @if (User.IsInRole(SD.Role_Physician))
                                    {

                        <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management System</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Appointment" asp-action="Index">Appointment</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="History" asp-action="Index">Patient History</a>

                              
                            </div>
                        </li>
                        }
                        @if (User.IsInRole(SD.Role_Receptionist))
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management System</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Appointment" asp-action="Index">Appointment</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Room" asp-action="Index">Room</a>

                                  
                                </div>
                            </li>
                        }   @if (User.IsInRole(SD.Role_Nurse))
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management System</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Appointment" asp-action="Index">Appointment</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="History" asp-action="Index">Patient History</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Room" asp-action="Index">Room</a>

                                </div>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_Biller))
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management System</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Appointment" asp-action="Index">Appointment</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Billing" asp-action="Index">Billing</a>

                                   </div>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                    @*<form class="d-flex">
                        <input class="form-control me-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
